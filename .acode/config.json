{
  "name": "AnimeStream",
  "version": "1.0.0",
  "description": "Anime Streaming Platform",
  "main": "server.js",
  "terminal": {
    "enabled": true,
    "shell": "/system/bin/sh",
    "fontSize": 14
  },
  "editor": {
    "fontSize": 14,
    "tabSize": 2,
    "useSoftTab": true,
    "showSpaces": false,
    "showLineNumbers": true,
    "wordWrap": true
  },
  "shortcuts": {
    "run": "node server.js",
    "stop": "pkill node",
    "install": "npm install",
    "test": "npm test"
  },
  "tasks": [
    {
      "name": "Start Server",
      "command": "node server.js",
      "description": "Start AnimeStream server"
    },
    {
      "name": "Stop Server",
      "command": "pkill node",
      "description": "Stop running server"
    },
    {
      "name": "Install Dependencies",
      "command": "npm install",
      "description": "Install all npm packages"
    },
    {
      "name": "Initialize Database",
      "command": "node database.js",
      "description": "Setup database"
    },
    {
      "name": "Reset Admin",
      "command": "node reset-admin.js",
      "description": "Reset admin password"
    }
  ]
}
