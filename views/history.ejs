                  <% } %>
                  <div class="actions" style="margin-top: 0.8rem;">
                    <a href="/watch/<%= anime.id %>" class="btn btn-primary" onclick="event.stopPropagation()">Tonton Lagi</a>
                    <button onclick="event.stopPropagation(); removeFromHistory(<%= anime.id %>)" class="btn btn-danger">Hapus</button>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        </div>
      <% } %>

