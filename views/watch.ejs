<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <meta name="theme-color" content="#1a1a2e">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <title><%= anime.title %> - Episode <%= anime.episode %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <div class="container">
      <h1 class="logo">üé¨ AnimeStream</h1>
      <div class="nav-right">
        <% if (user) { %>
          <a href="/dashboard" class="user-badge">üë§ <%= user.username %></a>
          <a href="/logout" class="btn-logout" style="margin-left: 1rem; padding: 0.5rem 1rem; background: #ff4757; color: white; border-radius: 8px; text-decoration: none; font-size: 0.9rem;">Keluar</a>
        <% } else { %>
          <a href="/login" class="btn-upload">Masuk</a>
        <% } %>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="watch-container">
      <h2><%= anime.title %> - Episode <%= anime.episode %></h2>
      
      <div class="video-player">
        <% 
        let videoUrl = anime.videoPath;
        let isExternal = videoUrl.startsWith('http://') || videoUrl.startsWith('https://');
        %>
        
        <% if (isExternal) { %>
          <!-- External Link -->
          <% if (videoUrl.includes('streamtape.com') || videoUrl.includes('streamtape.net')) { %>
            <!-- Streamtape Embed -->
            <% 
            let embedUrl = videoUrl;
            // Convert streamtape link to embed
            if (videoUrl.includes('/v/')) {
              let videoId = videoUrl.split('/v/')[1].split('/')[0].split('?')[0];
              embedUrl = `https://streamtape.com/e/${videoId}`;
            } else if (videoUrl.includes('/e/')) {
              embedUrl = videoUrl;
            }
            %>
            <iframe src="<%= embedUrl %>" width="100%" height="500" frameborder="0" allowfullscreen allow="autoplay" style="border-radius: 8px; background: #000;"></iframe>
            
          <% } else if (videoUrl.includes('doodstream.com') || videoUrl.includes('dood.')) { %>
            <!-- Doodstream Embed -->
            <% 
            let embedUrl = videoUrl;
            // Convert doodstream link to embed
            if (videoUrl.includes('/d/')) {
              let videoId = videoUrl.split('/d/')[1].split('/')[0].split('?')[0];
              embedUrl = `https://doodstream.com/e/${videoId}`;
            } else if (videoUrl.includes('/e/')) {
              embedUrl = videoUrl;
            }
            %>
            <iframe src="<%= embedUrl %>" width="100%" height="500" frameborder="0" allowfullscreen allow="autoplay" style="border-radius: 8px; background: #000;"></iframe>
            
          <% } else if (videoUrl.includes('mixdrop.')) { %>
            <!-- Mixdrop Embed -->
            <% 
            let embedUrl = videoUrl;
            // Convert mixdrop link to embed
            if (videoUrl.includes('/f/')) {
              let videoId = videoUrl.split('/f/')[1].split('/')[0].split('?')[0];
              embedUrl = `https://mixdrop.co/e/${videoId}`;
            } else if (videoUrl.includes('/e/')) {
              embedUrl = videoUrl;
            }
            %>
            <iframe src="<%= embedUrl %>" width="100%" height="500" frameborder="0" allowfullscreen allow="autoplay" style="border-radius: 8px; background: #000;"></iframe>
            
          <% } else if (videoUrl.includes('vidoza.') || videoUrl.includes('vidoza.net')) { %>
            <!-- Vidoza Embed -->
            <% 
            let embedUrl = videoUrl;
            // Convert vidoza link to embed
            if (videoUrl.includes('/watch?v=')) {
              let videoId = videoUrl.split('watch?v=')[1].split('&')[0];
              embedUrl = `https://vidoza.net/embed-${videoId}.html`;
            } else if (videoUrl.match(/\/([a-zA-Z0-9]+)\.html/)) {
              let videoId = videoUrl.match(/\/([a-zA-Z0-9]+)\.html/)[1];
              embedUrl = `https://vidoza.net/embed-${videoId}.html`;
            } else if (videoUrl.includes('/embed-')) {
              embedUrl = videoUrl;
            }
            %>
            <iframe src="<%= embedUrl %>" width="100%" height="500" frameborder="0" allowfullscreen allow="autoplay" style="border-radius: 8px; background: #000;"></iframe>
            
          <% } else if (videoUrl.includes('voe.sx') || videoUrl.includes('voe.')) { %>
            <!-- VOE Embed -->
            <% 
            let embedUrl = videoUrl;
            // Convert voe link to embed
            if (videoUrl.includes('/e/')) {
              embedUrl = videoUrl;
            } else {
              let videoId = videoUrl.split('/').pop().split('?')[0];
              embedUrl = `https://voe.sx/e/${videoId}`;
            }
            %>
            <iframe src="<%= embedUrl %>" width="100%" height="500" frameborder="0" allowfullscreen allow="autoplay" style="border-radius: 8px; background: #000;"></iframe>
            
          <% } else if (videoUrl.includes('filemoon.') || videoUrl.includes('filemoon.sx')) { %>
            <!-- Filemoon Embed -->
            <% 
            let embedUrl = videoUrl;
            // Convert filemoon link to embed
            if (videoUrl.includes('/e/')) {
              embedUrl = videoUrl;
            } else if (videoUrl.includes('/d/')) {
              let videoId = videoUrl.split('/d/')[1].split('/')[0].split('?')[0];
              embedUrl = `https://filemoon.sx/e/${videoId}`;
            }
            %>
            <iframe src="<%= embedUrl %>" width="100%" height="500" frameborder="0" allowfullscreen allow="autoplay" style="border-radius: 8px; background: #000;"></iframe>
            
          <% } else if (videoUrl.includes('upstream.to')) { %>
            <!-- Upstream Embed -->
            <% 
            let embedUrl = videoUrl;
            // Convert upstream link to embed
            if (videoUrl.includes('/embed-')) {
              embedUrl = videoUrl;
            } else {
              let videoId = videoUrl.split('/').filter(x => x).pop().split('?')[0].replace('.html', '');
              embedUrl = `https://upstream.to/embed-${videoId}.html`;
            }
            %>
            <iframe src="<%= embedUrl %>" width="100%" height="500" frameborder="0" allowfullscreen allow="autoplay" style="border-radius: 8px; background: #000;"></iframe>
            
          <% } else if (videoUrl.includes('cloudinary.com')) { %>
            <!-- Cloudinary Embed (AD-FREE!) -->
            <% 
            let embedUrl = videoUrl;
            // Cloudinary video player
            %>
            <video controls autoplay style="width: 100%; max-height: 500px; border-radius: 8px; background: #000;">
              <source src="<%= embedUrl %>" type="video/mp4">
              Browser Anda tidak mendukung video player.
            </video>
            <div style="background: linear-gradient(135deg, rgba(76, 175, 80, 0.1), rgba(139, 195, 74, 0.1)); padding: 0.8rem; margin-top: 0.5rem; border-radius: 8px; text-align: center; border: 2px solid #4caf50;">
              <p style="color: #4caf50; margin: 0; font-size: 0.9rem; font-weight: 600;">
                ‚úÖ AD-FREE - Tidak ada iklan!
              </p>
            </div>
            
          <% } else if (videoUrl.includes('streamable.com')) { %>
            <!-- Streamable Embed (AD-FREE!) -->
            <% 
            let embedUrl = videoUrl;
            // Convert streamable link to embed
            if (videoUrl.includes('/e/')) {
              embedUrl = videoUrl;
            } else {
              let videoId = videoUrl.split('/').pop().split('?')[0];
              embedUrl = `https://streamable.com/e/${videoId}`;
            }
            %>
            <iframe src="<%= embedUrl %>" width="100%" height="500" frameborder="0" allowfullscreen allow="autoplay" style="border-radius: 8px; background: #000;"></iframe>
            <div style="background: linear-gradient(135deg, rgba(76, 175, 80, 0.1), rgba(139, 195, 74, 0.1)); padding: 0.8rem; margin-top: 0.5rem; border-radius: 8px; text-align: center; border: 2px solid #4caf50;">
              <p style="color: #4caf50; margin: 0; font-size: 0.9rem; font-weight: 600;">
                ‚úÖ AD-FREE - Tidak ada iklan!
              </p>
            </div>
            
          <% } else if (videoUrl.includes('vimeo.com')) { %>
            <!-- Vimeo Embed (AD-FREE!) -->
            <% 
            let embedUrl = videoUrl;
            // Convert vimeo link to embed
            if (videoUrl.includes('/video/')) {
              let videoId = videoUrl.split('/video/')[1].split('/')[0].split('?')[0];
              embedUrl = `https://player.vimeo.com/video/${videoId}`;
            } else if (videoUrl.includes('player.vimeo.com')) {
              embedUrl = videoUrl;
            } else {
              let videoId = videoUrl.split('/').pop().split('?')[0];
              embedUrl = `https://player.vimeo.com/video/${videoId}`;
            }
            %>
            <iframe src="<%= embedUrl %>" width="100%" height="500" frameborder="0" allowfullscreen allow="autoplay" style="border-radius: 8px; background: #000;"></iframe>
            <div style="background: linear-gradient(135deg, rgba(76, 175, 80, 0.1), rgba(139, 195, 74, 0.1)); padding: 0.8rem; margin-top: 0.5rem; border-radius: 8px; text-align: center; border: 2px solid #4caf50;">
              <p style="color: #4caf50; margin: 0; font-size: 0.9rem; font-weight: 600;">
                ‚úÖ AD-FREE - Tidak ada iklan!
              </p>
            </div>
            
          <% } else if (videoUrl.includes('drive.google.com')) { %>
            <!-- Google Drive - Show button -->
            <div style="background: linear-gradient(135deg, rgba(138, 43, 226, 0.2), rgba(168, 85, 247, 0.2)); padding: 3rem 2rem; border-radius: 12px; text-align: center; border: 2px solid rgba(168, 85, 247, 0.3);">
              <div style="font-size: 4rem; margin-bottom: 1rem;">üé¨</div>
              <h3 style="color: #fff; margin-bottom: 0.5rem; font-size: 1.5rem;">Tonton <%= anime.title %></h3>
              <p style="color: #aaa; margin-bottom: 2rem; font-size: 1rem;">Episode <%= anime.episode %></p>
              <a href="<%= videoUrl %>" target="_blank" class="btn btn-primary" style="display: inline-block; padding: 1.2rem 2.5rem; background: linear-gradient(135deg, #4285f4, #34a853); color: white; text-decoration: none; border-radius: 12px; font-weight: 700; font-size: 1.2rem; box-shadow: 0 4px 15px rgba(66, 133, 244, 0.4);">
                <span style="font-size: 1.5rem; margin-right: 0.5rem;">‚ñ∂Ô∏è</span>
                Tonton di Google Drive
              </a>
              <p style="color: #999; margin-top: 1.5rem; font-size: 0.9rem;">
                üí° Untuk streaming langsung, gunakan Streamtape/Doodstream
              </p>
            </div>
            
          <% } else { %>
            <!-- Other External Links - Try direct embed -->
            <video controls autoplay style="width: 100%; max-height: 500px; border-radius: 8px; background: #000;">
              <source src="<%= videoUrl %>" type="video/mp4">
              Browser Anda tidak mendukung video player.
            </video>
            <div style="background: rgba(168, 85, 247, 0.1); padding: 1rem; margin-top: 1rem; border-radius: 8px; text-align: center;">
              <p style="color: #aaa; margin-bottom: 0.5rem;">Tidak bisa play?</p>
              <a href="<%= videoUrl %>" target="_blank" class="btn btn-primary" style="display: inline-block; padding: 0.8rem 1.5rem;">
                ‚ñ∂Ô∏è Buka di Tab Baru
              </a>
            </div>
          <% } %>
        <% } else { %>
          <!-- Local Video -->
          <video controls autoplay style="width: 100%; max-height: 500px; border-radius: 8px; background: #000;">
            <source src="/uploads/<%= anime.videoPath %>" type="video/mp4">
            Browser Anda tidak mendukung video player.
          </video>
        <% } %>
      </div>

      <div class="anime-details">
        <h3>üìñ Deskripsi</h3>
        <p><%= anime.description %></p>
        <p class="date">üìÖ Diupload: <%= anime.uploadDate %></p>
      </div>
    </div>
  </div>

  <div class="bottom-nav">
    <a href="/" class="active">
      <span>üè†</span>
      <span>Beranda</span>
    </a>
    <a href="/upload">
      <span>‚¨ÜÔ∏è</span>
      <span>Upload</span>
    </a>
  </div>

