  <script>
    function switchMethod(method) {
      // Update buttons
      document.querySelectorAll('.method-btn').forEach(btn => {
        btn.classList.remove('active');
      });
      event.target.classList.add('active');
      
      // Update sections
      document.querySelectorAll('.upload-section').forEach(section => {
        section.classList.remove('active');
      });
      
      if (method === 'link') {
        document.getElementById('linkSection').classList.add('active');
      } else {
        document.getElementById('fileSection').classList.add('active');
      }
    }
    
    // Update file name display
    function updateFileName(input) {
      const fileName = input.files[0]?.name;
      const fileSize = (input.files[0]?.size / (1024 * 1024)).toFixed(2);
      
      if (fileName) {
        document.getElementById('fileName').textContent = `ğŸ“ ${fileName} (${fileSize} MB)`;
      }
    }
    
    // Form validation for link upload
    document.getElementById('linkUploadForm').addEventListener('submit', function(e) {
      const link = document.getElementById('videoLink').value;
      
      if (!link) {
        e.preventDefault();
        alert('âŒ Link video harus diisi!');
        return;
      }
      
      // Basic URL validation
      try {
        new URL(link);
      } catch (error) {
        e.preventDefault();
        alert('âŒ Link tidak valid! Pastikan link dimulai dengan http:// atau https://');
        return;
      }
    });
    
    // File upload with progress
    document.getElementById('fileUploadForm').addEventListener('submit', function(e) {
      e.preventDefault();
      
      const fileInput = document.getElementById('videoFile');
      const file = fileInput.files[0];
      
      if (!file) {
        alert('âŒ Pilih video terlebih dahulu!');
        return;
      }
      
      // Check file size (max 500MB)
      const maxSize = 500 * 1024 * 1024;
      if (file.size > maxSize) {
        alert('âŒ File terlalu besar! Maksimal 500MB');
        return;
      }
      
      // Show progress
      document.getElementById('uploadProgress').style.display = 'block';
      document.getElementById('uploadBtn').disabled = true;
      document.getElementById('uploadBtn').textContent = 'â³ Uploading...';
      
      // Create FormData
      const formData = new FormData(this);
      
      // Upload with XMLHttpRequest for progress tracking
      const xhr = new XMLHttpRequest();
      
      xhr.upload.addEventListener('progress', function(e) {
        if (e.lengthComputable) {
          const percentComplete = (e.loaded / e.total) * 100;
          document.getElementById('progressBar').style.width = percentComplete + '%';
          document.getElementById('progressBar').textContent = Math.round(percentComplete) + '%';
          document.getElementById('progressText').textContent = `Uploading... ${(e.loaded / (1024 * 1024)).toFixed(2)} MB / ${(e.total / (1024 * 1024)).toFixed(2)} MB`;
        }
      });
      
      xhr.addEventListener('load', function() {
        if (xhr.status === 200) {
          const response = JSON.parse(xhr.responseText);
          if (response.success) {
            alert('âœ… Upload berhasil!');
            window.location.href = '/';
          } else {
            alert('âŒ Upload gagal: ' + response.error);
            document.getElementById('uploadBtn').disabled = false;
            document.getElementById('uploadBtn').textContent = 'ğŸš€ Upload Video';
            document.getElementById('uploadProgress').style.display = 'none';
          }
        } else {
          alert('âŒ Upload gagal! Status: ' + xhr.status);
          document.getElementById('uploadBtn').disabled = false;
          document.getElementById('uploadBtn').textContent = 'ğŸš€ Upload Video';
          document.getElementById('uploadProgress').style.display = 'none';
        }
      });
      
      xhr.addEventListener('error', function() {
        alert('âŒ Upload error! Cek koneksi internet.');
        document.getElementById('uploadBtn').disabled = false;
        document.getElementById('uploadBtn').textContent = 'ğŸš€ Upload Video';
        document.getElementById('uploadProgress').style.display = 'none';
      });
      
      xhr.open('POST', '/upload');
      xhr.send(formData);
    });
  </script>

